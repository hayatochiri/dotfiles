[core]
  editor = vim
  quotepath = false
  pager = nkf -w | LESSCHARSET=utf-8 less
[ghq]
  root = ~/src
[color]
  ui = true
[color "diff"]
  meta = yellow
[alias]
	cached = diff --cached
[diff]
  tool = subl2
[difftool "subl2"]
  cmd = fish -c \"subl2 $LOCAL $REMOTE\"
[merge]
  tool = subl3_merge
[mergetool "subl3_merge"]
  cmd = fish -c \"subl3_merge $REMOTE $BASE $LOCAL $MERGED\"
